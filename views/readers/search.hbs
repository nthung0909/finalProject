<div class="row">
    <div class="container pt-3">
        <div class="row p-0">
            <div class="col-8 main">
                <div class="row">
                    <div class="col-12 content-title">
                        <h4>TÌM KIẾM: {{#each this.query}}{{detailcate}} {{tag}}{{/each}}</h4>
                    </div>
                </div>
                <p></p>
                {{!-- search by detailCate --}}
                <div class="row">
                    {{#each result_query}}
                    <div class="col-4 mb-3">
                        <a href="/posts?id={{postsID}}">
                            <img class="rounded avatar" src="{{small_avatar}}" alt="" width="100%">
                        </a>
                    </div>
                    <div class="col-8 p-0">
                        <div class="title-top10">
                            <a href="/posts?id={{postsID}}">
                                <h4>{{title}}</h4>{{#if isVIP}} <span style="color: red;">VIP</span> {{/if}}
                            </a>
                        </div>
                        <div class="sub-title">
                            <a href="/search?detailcate={{catName}}"><span>{{catName}}</span></a>
                            &nbsp;&nbsp;&nbsp;
                            <span>{{date}}</span> &nbsp;&nbsp;&nbsp;
                        </div>
                        <div class="col-12 p-0 pb-4">
                            {{sub_content}}
                        </div>
                    </div>
                    {{/each}}
                </div>
                <hr>
