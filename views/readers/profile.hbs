<div class="row">
    <div class="container p-5">
        <form class="row" method="POST" enctype="multipart/form-data">
            <div class="col-4">
                <div class="d-flex justify-content-center">
                    {{!-- <img class="img-profile rounded-circle" src="https://source.unsplash.com/QAB-WJcbgJk/60x60"> --}}
                    <img class="rounded-circle profile-avatar" alt="" src="{{this.user.avatar}}"
                        data-holder-rendered="true">
                    <input type="file" name="avatar" id="avatar" class="upload-avatar">
                    {{!-- <span class="avatar-hover"><i class="fa fa-camera-retro fa-2x" aria-hidden="true" hidden ><p>Cập nhật</p></i></span> --}}
                </div>
                <br>
                {{!-- class="d-flex justify-content-center" --}}

                {{!-- <div class="d-flex justify-content-center">
                    <button type="submit" formaction="/profile/upload_image">Thay hình đại diện</button>
                </div> --}}
            </div>
            <div class="col-8">
                {{!-- FullName --}}
                <div class="form-group">
                    <label for="exampleInputPassword1">Họ tên</label>
                    <input type="text" class="form-control" id="txtfullname" name="fullname"
                        value="{{this.user.fullname}}">
                </div>
                <input type="text" value="{{this.user.accID}}" name="accID" id="accID" hidden>
                {{!-- UserName --}}
                <div class="form-group">
                    <label for="exampleInputPassword1">Tên đăng nhập</label>
                    <input disabled class="form-control" id="txtuser" name="username" value="{{this.user.username}}">
                </div>
                {{!-- Passwork --}}
                <div class="form-group">
                    <label for="exampleInputPassword1">Mật khẩu</label>
                    <input type="password" class="form-control" id="pw" name="password" value="{{this.user.password}}">
                </div>
                {{!-- Email --}}
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="email" class="form-control" id="email" value="{{this.user.email}}" name="email"
                        aria-describedby="emailHelp">
                </div>
                {{!-- Time up --}}
                <div class="form-group">
                    <label for="exampleInputPassword1">Loại tài khoản</label>
                    {{#if pre}}
                    <input disabled class="form-control" value="prenium">
                    {{else}}
                    <input disabled class="form-control" value="Tài khoản thường">
                    {{/if}}
                </div>
                <button type="submit" class="btn btn-primary" formaction="/profile/update">Update</button>
            </div>
        </form>
    </div>
</div>
</div>