<div class="row pb-5">
  <div class="col-3">
  </div>
  <div class="col-6">
    <form method="POST">
      <div class="form-group">
        <label for="exampleInputPassword1">ID</label>
        <input type="text" class="form-control" id="accID" name="accID" readonly value="{{user.accID}}">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Họ tên</label>
        <input type="text" class="form-control" id="txtfullname" name="fullname" value="{{user.fullname}}">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Tên đăng nhập</label>
        <input disabled class="form-control" id="txtuser" name="username" value="{{user.username}}">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Mật khẩu</label>
        <input type="password" class="form-control" id="pw" name="password" value="{{user.password}}">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Địa chỉ email</label>
        <input type="email" class="form-control" id="email" value="{{user.email}}" name="email"
          aria-describedby="emailHelp">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Loại tài khoản</label>
        <select class="form-control" id="txttypeID" name="type">
          <option value="{{user.type}}" selected>{{#getAccountType user.type}}{{/getAccountType}}</option>
          <option value="2">writer</option>
          <option value="3">approver</option>
          <option value="4">reader</option>
        </select>

      </div>
      {{#compareAccountType user.type 4 }}
        <div class="form-group">
          <div class="form-inline">
            <label for="exampleInputEmail1">Thời hạn tài khoản VIP:</label>
          <input type="text" class="form-control ml-2" name="time_up" id="time_up" value={{../user.time_up}}>
          </div>
        </div>
      {{/compareAccountType}}
      <div>

      <div class="d-flex justify-content-center">
        <a class="btn btn-success" href="/admin/accounts/list" role="button">
          <i class="fa fa-backward" aria-hidden="true"></i>
        </a>&nbsp;
        <button type="submit" class="btn btn-primary" formaction="/admin/accounts/update">Update Account</button>
        &nbsp;<button type="submit" class="btn btn-danger" title="Remove Account" formaction="/admin/accounts/del">
          <i class="fa fa-trash" aria-hidden="true"></i>
        </button>
      </div>
    </form>
  </div>