<div class="row">
  <div class="col-3">

  </div>
  <div class="col-6">
    <form method="POST">
      <div class="form-group">
        <label for="exampleInputPassword1">accID</label>
        <input type="text" class="form-control" id="txtaccID" name="accID" readonly value="{{this.account.accID}}">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">fullname</label>
        <input type="text" class="form-control" id="txtfullname" name="fullname" value="{{this.account.fullname}}">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="pw" name="password" value="{{this.account.password}}">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Type</label>
        <select class="form-control" id="txttypeID" name="type">
          <option value="{{rowsType.type}}" selected>{{rowsType.status}}</option>
          {{#each typestatus }}
          <option value="{{typeID}}">
            {{status}}
          </option>

          {{/each}}
        </select>

      </div>
      <div class="form-group">
        <label>Chọn ngày: </label>
        <div > 
          {{!-- <input class="form-control" readonly type="text" value="{{this.account.time_up}}"> 
            <span class="input-group-addon"><i class="fa fa-calendar-check-o" aria-hidden="true"></i></span> --}}
            <input  type="text" id="datepicker" class=" form_group">
        </div>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">User name</label>
        <input disabled class="form-control" id="txtuser" name="username" value="{{this.account.username}}">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="email" value="{{this.account.email}}" name="email"
          aria-describedby="emailHelp">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div>

        <a class="btn btn-success" href="/admin/accounts/list" role="button">
          <i class="fa fa-backward" aria-hidden="true"></i>
        </a>
        <button type="submit" class="btn btn-primary" formaction="/admin/accounts/update">Update Account</button>
        <button type="submit" class="btn btn-danger" title="Remove Account" formaction="/admin/accounts/del">
          <i class="fa fa-trash" aria-hidden="true"></i>
        </button>
    </form>
  </div>